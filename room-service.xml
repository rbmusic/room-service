<?xml version='1.0' encoding='utf-8'?>
<rss version="2.0" xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd" xmlns:content="http://purl.org/rss/1.0/modules/content/">
    <channel>
        <title>{{ site.podcast.title }}</title>
        <description>{{ site.podcast.description | xml_escape }}</description>
        <link>{{ site.url }}</link>
        <itunes:author>{{ site.podcast.author }}</itunes:author>
        <itunes:email>{{ site.podcast.email }}</itunes:email>
        <itunes:image href='{{ site.podcast.album_art | absolute_url }}'/>
        {% capture copyright %}Copyright Â© {{ site.podcast.author }}{%- endcapture -%}
        <copyright>{{ copyright | xml_escape }}</copyright>
        <itunes:owner>
            <itunes:name>{{ site.podcast.author }}</itunes:name>
            <itunes:email>{{ site.podcast.email }}</itunes:email>
        </itunes:owner>
        <itunes:category text='Music' />
        <language>en</language>
        <itunes:type>{{ site.podcast.type }}</itunes:type>
        <itunes:explicit>{{ site.podcast.explicit }}</itunes:explicit>
        <itunes:complete>{{ site.podcast.complete }}</itunes:complete>
        <itunes:block>{{ site.podcast.block }}</itunes:block>
        {% for post in site.categories.podcast %}
        <item>
            <title>{{ post.title }}</title>
            <itunes:author>{{ post.author | default: site.podcast.author }}</itunes:author>
            <itunes:season>{{ post.season }}</itunes:season>
            <itunes:episode>{{ post.episode }}</itunes:episode>
            <itunes:episodeType>{{ post.episodeType | default: 'full' }}</itunes:episodeType>
            <itunes:explicit>{{ post.explicit }}</itunes:explicit>
            <itunes:block>{{ post.block | default: 'false' }}</itunes:block>
            <itunes:image href='{{ post.album_art }}'/>
            <link>{{ post.url | absolute_url }}</link>
            <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
            <itunes:duration>{{ post.duration | xml_escape }}</itunes:duration>
            <enclosure url='{{ post.enclosure }}' length='{{ post.length | xml_escape }}' type='{{ post.enclosure_type | default: "audio/mpeg" }}' />
            <guid>{{ post.guid }}</guid>
            <description><![CDATA[{{ post.content | strip_newlines }}]]></description>
        </item>
        {% endfor %}
    </channel>
</rss>